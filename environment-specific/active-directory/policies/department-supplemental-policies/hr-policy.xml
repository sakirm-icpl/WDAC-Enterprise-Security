  <!--File Rules - HR Department Applications-->
  <FileRules>
    <!--Allow HR management system-->
    <Allow ID="ID_ALLOW_HR_SYSTEM" FriendlyName="HR Management System" FileName="hrsystem.exe" FilePath="%PROGRAMFILES%\HumanResources\*" />
    
