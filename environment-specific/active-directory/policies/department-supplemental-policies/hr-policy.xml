        <CertRoot Type="TBS" Value="D2E3F4A5B6C7D8E9F0A1B2C3D4E5F6A7B8C9D0E1F2A3B4C5D6E7F8A9B0C1D2E3" />
        <CertPublisher Value="PayrollCorp Inc." />
      </Signer>
    </Allow>
    
    <!--Allow background check tools-->
    <Allow ID="ID_ALLOW_BACKGROUND_CHECK" FriendlyName="Background Check Tools" FileName="backgroundcheck.exe" FilePath="%PROGRAMFILES%\BackgroundVerification\*" />
  </FileRules>
  <!--Signers-->
  <Signers>
    <Signer Name="PayrollCorp Inc." ID="ID_SIGNER_PAYROLL">
      <CertRoot Type="TBS" Value="D2E3F4A5B6C7D8E9F0A1B2C3D4E5F6A7B8C9D0E1F2A3B4C5D6E7F8A9B0C1D2E3" />
