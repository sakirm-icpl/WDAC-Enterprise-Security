  <!--File Rules - Emergency Access Applications-->
  <FileRules>
    <!--Allow diagnostic tools for troubleshooting-->
    <Allow ID="ID_ALLOW_DIAGNOSTICS" FriendlyName="Diagnostic Tools" FileName="diagtool.exe" FilePath="%PROGRAMFILES%\Diagnostics\*" />
    
    <!--Allow temporary vendor software with expiration-->
    <Allow ID="ID_ALLOW_TEMP_VENDOR" FriendlyName="Temporary Vendor Software" FileName="vendorapp.exe" FilePath="%PROGRAMFILES%\TempVendor\*" MinimumFileVersion="1.0.0.0" MaximumFileVersion="1.0.9999.9999" />
    
    <!--Allow backup and recovery tools-->
    <Allow ID="ID_ALLOW_BACKUP" FriendlyName="Backup Tools" FileName="backup.exe" FilePath="%PROGRAMFILES%\BackupTool\*" />
    
    <!--Allow network analysis tools-->
    <Allow ID="ID_ALLOW_NETWORK_ANALYSIS" FriendlyName="Network Analysis Tools" FileName="netanalyzer.exe" FilePath="%PROGRAMFILES%\NetTools\*" />
  </FileRules>
