<?xml version="1.0" encoding="utf-8"?>
<Policy xmlns="urn:schemas-microsoft-com:sipolicy" PolicyType="Supplemental Policy">
  <VersionEx>1.0.0.0</VersionEx>
  <BasePolicyID>{12345678-1234-1234-1234-123456789012}</BasePolicyID>
  <Rules>
    <Rule>
      <Option>Enabled:Unsigned System Integrity Policy</Option>
    </Rule>
    <Rule>
      <Option>Enabled:Audit Mode</Option>
    </Rule>
  </Rules>
  <!--File Rules-->
  <FileRules>
    <!--Allow Electronic Health Record (EHR) Systems-->
    <Allow ID="ID_ALLOW_EHR_EPIC" FriendlyName="Allow Epic EHR System" FileName="*" FilePath="%PROGRAMFILES%\Epic\*" />
    <Allow ID="ID_ALLOW_EHR_CERNER" FriendlyName="Allow Cerner EHR System" FileName="*" FilePath="%PROGRAMFILES%\Cerner\*" />
    <Allow ID="ID_ALLOW_EHR_MEDITECH" FriendlyName="Allow MEDITECH EHR System" FileName="*" FilePath="%PROGRAMFILES%\MEDITECH\*" />
    
    <!--Allow Medical Imaging Software-->
    <Allow ID="ID_ALLOW_IMAGING_PACS" FriendlyName="Allow PACS Imaging Software" FileName="*" FilePath="%PROGRAMFILES%\PACS\*" />
    <Allow ID="ID_ALLOW_IMAGING_HOROS" FriendlyName="Allow Horos Imaging Software" FileName="*" FilePath="%PROGRAMFILES%\Horos\*" />
    
    <!--Allow Laboratory Information Systems-->
    <Allow ID="ID_ALLOW_LIS_SUNQUEST" FriendlyName="Allow Sunquest LIS" FileName="*" FilePath="%PROGRAMFILES%\Sunquest\*" />
    <Allow ID="ID_ALLOW_LIS_LABVANTAGE" FriendlyName="Allow LabVantage LIS" FileName="*" FilePath="%PROGRAMFILES%\LabVantage\*" />
    
    <!--Allow Telemedicine Platforms-->
    <Allow ID="ID_ALLOW_TELEMEDICINE_ZOOM" FriendlyName="Allow Zoom for Telemedicine" FileName="*" FilePath="%PROGRAMFILES%\Zoom\*" />
    <Allow ID="ID_ALLOW_TELEMEDICINE_TEAMS" FriendlyName="Allow Microsoft Teams for Telemedicine" FileName="*" FilePath="%PROGRAMFILES%\Microsoft Teams\*" />
    
    <!--Allow Medical Device Interfaces-->
    <Allow ID="ID_ALLOW_MEDICAL_DEVICES" FriendlyName="Allow Medical Device Interface Software" FileName="*" FilePath="%PROGRAMFILES%\MedicalDevices\*" />
  </FileRules>
  <!--Driver Signing Scenarios-->
  <SigningScenarios>
    <SigningScenario Value="131" ID="ID_SIGNINGSCENARIO_HEALTHCARE_DRIVERS" FriendlyName="Healthcare Clinical Apps Driver Scenario">
      <ProductSigners>
        <FileRulesRef>
          <FileRuleRef RuleID="ID_ALLOW_EHR_EPIC" />
          <FileRuleRef RuleID="ID_ALLOW_EHR_CERNER" />
          <FileRuleRef RuleID="ID_ALLOW_EHR_MEDITECH" />
          <FileRuleRef RuleID="ID_ALLOW_IMAGING_PACS" />
          <FileRuleRef RuleID="ID_ALLOW_IMAGING_HOROS" />
          <FileRuleRef RuleID="ID_ALLOW_LIS_SUNQUEST" />
          <FileRuleRef RuleID="ID_ALLOW_LIS_LABVANTAGE" />
          <FileRuleRef RuleID="ID_ALLOW_TELEMEDICINE_ZOOM" />
          <FileRuleRef RuleID="ID_ALLOW_TELEMEDICINE_TEAMS" />
          <FileRuleRef RuleID="ID_ALLOW_MEDICAL_DEVICES" />
        </FileRulesRef>
      </ProductSigners>
    </SigningScenario>
    <SigningScenario Value="12" ID="ID_SIGNINGSCENARIO_HEALTHCARE_WINDOWS" FriendlyName="Healthcare Clinical Apps Windows Scenario">
      <ProductSigners>
        <FileRulesRef>
          <FileRuleRef RuleID="ID_ALLOW_EHR_EPIC" />
          <FileRuleRef RuleID="ID_ALLOW_EHR_CERNER" />
          <FileRuleRef RuleID="ID_ALLOW_EHR_MEDITECH" />
          <FileRuleRef RuleID="ID_ALLOW_IMAGING_PACS" />
          <FileRuleRef RuleID="ID_ALLOW_IMAGING_HOROS" />
          <FileRuleRef RuleID="ID_ALLOW_LIS_SUNQUEST" />
          <FileRuleRef RuleID="ID_ALLOW_LIS_LABVANTAGE" />
          <FileRuleRef RuleID="ID_ALLOW_TELEMEDICINE_ZOOM" />
          <FileRuleRef RuleID="ID_ALLOW_TELEMEDICINE_TEAMS" />
          <FileRuleRef RuleID="ID_ALLOW_MEDICAL_DEVICES" />
        </FileRulesRef>
      </ProductSigners>
    </SigningScenario>
  </SigningScenarios>
  <UpdatePolicySigners>
  </UpdatePolicySigners>
  <HvciOptions>0</HvciOptions>
</Policy>