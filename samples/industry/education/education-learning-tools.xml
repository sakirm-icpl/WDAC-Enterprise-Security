<?xml version="1.0" encoding="utf-8"?>
<Policy xmlns="urn:schemas-microsoft-com:sipolicy" PolicyType="Supplemental Policy">
  <VersionEx>1.0.0.0</VersionEx>
  <BasePolicyID>{12345678-1234-1234-1234-123456789012}</BasePolicyID>
  <Rules>
    <Rule>
      <Option>Enabled:Unsigned System Integrity Policy</Option>
    </Rule>
    <Rule>
      <Option>Enabled:Audit Mode</Option>
    </Rule>
  </Rules>
  <!--File Rules-->
  <FileRules>
    <!--Allow Learning Management Systems-->
    <Allow ID="ID_ALLOW_LMS_CANVAS" FriendlyName="Allow Canvas LMS" FileName="*" FilePath="%PROGRAMFILES%\Canvas\*" />
    <Allow ID="ID_ALLOW_LMS_BLACKBOARD" FriendlyName="Allow Blackboard LMS" FileName="*" FilePath="%PROGRAMFILES%\Blackboard\*" />
    <Allow ID="ID_ALLOW_LMS_MOODLE" FriendlyName="Allow Moodle" FileName="*" FilePath="%PROGRAMFILES%\Moodle\*" />
    
    <!--Allow Educational Software-->
    <Allow ID="ID_ALLOW_EDUCATION_KAHOOT" FriendlyName="Allow Kahoot" FileName="*" FilePath="%PROGRAMFILES%\Kahoot\*" />
    <Allow ID="ID_ALLOW_EDUCATION_QUIZLET" FriendlyName="Allow Quizlet" FileName="*" FilePath="%PROGRAMFILES%\Quizlet\*" />
    <Allow ID="ID_ALLOW_EDUCATION_GOOGLE_CLASSROOM" FriendlyName="Allow Google Classroom" FileName="*" FilePath="%PROGRAMFILES%\Google Classroom\*" />
    
    <!--Allow Video Conferencing for Education-->
    <Allow ID="ID_ALLOW_EDUCATION_ZOOM" FriendlyName="Allow Zoom for Education" FileName="*" FilePath="%PROGRAMFILES%\Zoom\*" />
    <Allow ID="ID_ALLOW_EDUCATION_MEET" FriendlyName="Allow Google Meet" FileName="*" FilePath="%PROGRAMFILES%\Google Meet\*" />
    <Allow ID="ID_ALLOW_EDUCATION_TEAMS" FriendlyName="Allow Microsoft Teams for Education" FileName="*" FilePath="%PROGRAMFILES%\Microsoft Teams\*" />
    
    <!--Allow STEM Learning Tools-->
    <Allow ID="ID_ALLOW_STEM_SCRATCH" FriendlyName="Allow Scratch Programming" FileName="*" FilePath="%PROGRAMFILES%\Scratch\*" />
    <Allow ID="ID_ALLOW_STEM_TINKERCAD" FriendlyName="Allow Tinkercad" FileName="*" FilePath="%PROGRAMFILES%\Tinkercad\*" />
    <Allow ID="ID_ALLOW_STEM_KODU" FriendlyName="Allow Kodu Game Lab" FileName="*" FilePath="%PROGRAMFILES%\Kodu\*" />
    
    <!--Allow Educational Games-->
    <Allow ID="ID_ALLOW_EDUCATION_GAMES" FriendlyName="Allow Educational Games" FileName="*" FilePath="%PROGRAMFILES%\EducationalGames\*" />
  </FileRules>
  <!--Driver Signing Scenarios-->
  <SigningScenarios>
    <SigningScenario Value="131" ID="ID_SIGNINGSCENARIO_EDUCATION_DRIVERS" FriendlyName="Education Learning Tools Driver Scenario">
      <ProductSigners>
        <FileRulesRef>
          <FileRuleRef RuleID="ID_ALLOW_LMS_CANVAS" />
          <FileRuleRef RuleID="ID_ALLOW_LMS_BLACKBOARD" />
          <FileRuleRef RuleID="ID_ALLOW_LMS_MOODLE" />
          <FileRuleRef RuleID="ID_ALLOW_EDUCATION_KAHOOT" />
          <FileRuleRef RuleID="ID_ALLOW_EDUCATION_QUIZLET" />
          <FileRuleRef RuleID="ID_ALLOW_EDUCATION_GOOGLE_CLASSROOM" />
          <FileRuleRef RuleID="ID_ALLOW_EDUCATION_ZOOM" />
          <FileRuleRef RuleID="ID_ALLOW_EDUCATION_MEET" />
          <FileRuleRef RuleID="ID_ALLOW_EDUCATION_TEAMS" />
          <FileRuleRef RuleID="ID_ALLOW_STEM_SCRATCH" />
          <FileRuleRef RuleID="ID_ALLOW_STEM_TINKERCAD" />
          <FileRuleRef RuleID="ID_ALLOW_STEM_KODU" />
          <FileRuleRef RuleID="ID_ALLOW_EDUCATION_GAMES" />
        </FileRulesRef>
      </ProductSigners>
    </SigningScenario>
    <SigningScenario Value="12" ID="ID_SIGNINGSCENARIO_EDUCATION_WINDOWS" FriendlyName="Education Learning Tools Windows Scenario">
      <ProductSigners>
        <FileRulesRef>
          <FileRuleRef RuleID="ID_ALLOW_LMS_CANVAS" />
          <FileRuleRef RuleID="ID_ALLOW_LMS_BLACKBOARD" />
          <FileRuleRef RuleID="ID_ALLOW_LMS_MOODLE" />
          <FileRuleRef RuleID="ID_ALLOW_EDUCATION_KAHOOT" />
          <FileRuleRef RuleID="ID_ALLOW_EDUCATION_QUIZLET" />
          <FileRuleRef RuleID="ID_ALLOW_EDUCATION_GOOGLE_CLASSROOM" />
          <FileRuleRef RuleID="ID_ALLOW_EDUCATION_ZOOM" />
          <FileRuleRef RuleID="ID_ALLOW_EDUCATION_MEET" />
          <FileRuleRef RuleID="ID_ALLOW_EDUCATION_TEAMS" />
          <FileRuleRef RuleID="ID_ALLOW_STEM_SCRATCH" />
          <FileRuleRef RuleID="ID_ALLOW_STEM_TINKERCAD" />
          <FileRuleRef RuleID="ID_ALLOW_STEM_KODU" />
          <FileRuleRef RuleID="ID_ALLOW_EDUCATION_GAMES" />
        </FileRulesRef>
      </ProductSigners>
    </SigningScenario>
  </SigningScenarios>
  <UpdatePolicySigners>
  </UpdatePolicySigners>
  <HvciOptions>0</HvciOptions>
</Policy>