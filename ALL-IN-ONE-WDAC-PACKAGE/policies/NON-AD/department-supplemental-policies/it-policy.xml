<?xml version="1.0" encoding="utf-8"?>
<Policy xmlns="urn:schemas-microsoft-com:sipolicy" PolicyType="Supplemental Policy">
  <VersionEx>1.0.0.0</VersionEx>
  <BasePolicyID>{A1B2C3D4-E5F6-7890-GHIJ-KLMNOPQRSTUV}</BasePolicyID>
  <Rules>
    <Rule>
      <Option>Enabled:Unsigned System Integrity Policy</Option>
    </Rule>
  </Rules>
  <!--File Rules - IT Department Applications-->
  <FileRules>
    <!--Allow remote management tools-->
    <Allow ID="ID_ALLOW_REMOTE_MANAGEMENT" FriendlyName="Remote Management Tools" FileName="remote.exe" FilePath="%PROGRAMFILES%\RemoteTools\*" />
    
    <!--Allow system monitoring software-->
    <Allow ID="ID_ALLOW_MONITORING" FriendlyName="System Monitoring Software" FileName="monitor.exe" MinimumFileVersion="0.0.0.0">
      <Signer Id="ID_SIGNER_MONITORING">
        <CertRoot Type="TBS" Value="E1F2A3B4C5D6E7F8A9B0C1D2E3F4A5B6C7D8E9F0A1B2C3D4E5F6A7B8C9D0E1F2" />
        <CertPublisher Value="Monitoring Solutions Corp." />
      </Signer>
    </Allow>
    
    <!--Allow PowerShell for administrative tasks-->
    <Allow ID="ID_ALLOW_POWERSHELL" FriendlyName="PowerShell" FileName="powershell.exe" FilePath="%WINDIR%\System32\WindowsPowerShell\v1.0\*" />
  </FileRules>
  <!--Signers-->
  <Signers>
    <Signer Name="Monitoring Solutions Corp." ID="ID_SIGNER_MONITORING">
      <CertRoot Type="TBS" Value="E1F2A3B4C5D6E7F8A9B0C1D2E3F4A5B6C7D8E9F0A1B2C3D4E5F6A7B8C9D0E1F2" />
      <CertPublisher Value="Monitoring Solutions Corp." />
    </Signer>
  </Signers>
  <!--Driver Signing Scenarios-->
  <SigningScenarios>
    <SigningScenario Value="131" ID="ID_SIGNINGSCENARIO_DRIVERS_1" FriendlyName="Auto generated policy on 08-15-2022">
      <ProductSigners>
        <FileRulesRef>
          <FileRuleRef RuleID="ID_ALLOW_REMOTE_MANAGEMENT" />
        </FileRulesRef>
      </ProductSigners>
    </SigningScenario>
    <SigningScenario Value="12" ID="ID_SIGNINGSCENARIO_WINDOWS" FriendlyName="Windows">
      <ProductSigners>
        <AllowedSigners>
          <AllowedSigner SignerId="ID_SIGNER_MONITORING" />
        </AllowedSigners>
        <FileRulesRef>
          <FileRuleRef RuleID="ID_ALLOW_REMOTE_MANAGEMENT" />
          <FileRuleRef RuleID="ID_ALLOW_POWERSHELL" />
        </FileRulesRef>
      </ProductSigners>
    </SigningScenario>
  </SigningScenarios>
</Policy>